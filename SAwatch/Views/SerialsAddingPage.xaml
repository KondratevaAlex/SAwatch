<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAwatch.Views.SerialsAddingPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor Placeholder="Название сериала"
                    Text="{Binding NameOfSerial}"
                    HeightRequest="100"/>
            <Editor Margin="20"
                    Placeholder="Количество сезонов"
                    Keyboard="Numeric"
                    Text="{Binding NumberOfSeasons}"
                    HeightRequest="100"/>
            <Editor Margin="20"
                    Placeholder="Количество серий в сезоне"
                    Keyboard="Numeric"
                    Text="{Binding NumberOfSeries}"
                    HeightRequest="100"/>
            <Button Text="Добавить"
                    HorizontalOptions="Center"
                    Clicked="AddSerialButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>