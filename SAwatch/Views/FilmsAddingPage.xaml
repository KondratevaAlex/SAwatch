<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAwatch.Views.FilmsAddingPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Editor Placeholder="Название фильма"
                    Text="{Binding NameOfFilm}"
                    HeightRequest="100"/>
            <Editor Margin="20"
                    Placeholder="Длительность фильма (в минутах)"
                    Text="{Binding DurationOfFilm}"
                    HeightRequest="100"/>
            <Button Text="Добавить"
                    HorizontalOptions="Center"
                    Clicked="AddFilmButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>